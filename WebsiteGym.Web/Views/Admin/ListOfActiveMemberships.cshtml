@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Active Memberships</title>
</head>
<body>
    <div>
        <form>
            <table class="table table-responsive table-hover">
                <thead>
                    <tr class="table-active">
                        <th>ID</th>
                        <th>UserName</th>
                        <th>E-Mail</th>
                        <th>Date of Registration</th>
                        <th>Membership Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.ActiveUsers != null && ViewBag.ActiveUsers.Count > 0)
                    {
                        foreach (var user in ViewBag.ActiveUsers)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>@user.ReggisterDateTime.ToString("dd/MM/yyyy")</td>
                                <td class="text-success fw-semibold">Active</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No active memberships found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</body>
</html>
