@model WebsiteGym.Web.Models.DiscountViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Active Memberships</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h3 class="mb-3 text-center">Active Memberships</h3>
        <table class="table table-responsive table-hover">
            <thead class="table-active">
                <tr>
                    <th>Membership Id</th>
                    <th>User Name</th>
                    <th>Membership Name</th>
                    <th>Price</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MembershipId</td>
                            <td>@item.UserName</td>
                            <td>@item.MembershipName</td>
                            <td>@item.Price</td>
                            <td>@item.Details</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No active memberships found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
