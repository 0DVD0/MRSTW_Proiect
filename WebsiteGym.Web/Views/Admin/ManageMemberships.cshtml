@model WebsiteGym.Web.Models.MembershipViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manage Membership Plans";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4 text-black">Add New Membership Plan</h2>

    @using (Html.BeginForm("AddMembership", "Admin", FormMethod.Post))
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.MembershipName, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.MembershipName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MembershipName, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Price, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number", step = "0.01" })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Details, new { @class = "form-label" })
            @Html.TextAreaFor(m => m.Details, new { @class = "form-control", rows = 3 })
            @Html.ValidationMessageFor(m => m.Details, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-success">Add Plan</button>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>