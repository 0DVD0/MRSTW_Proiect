    <!-- Header Section -->
    <header class="bg-white text-white text-center py-5">
        <h1>Choose the Perfect Membership for You</h1>
        <p>Discover the benefits of each plan and start today!</p>
    </header>

    <!-- Cards Section -->
    <section id="plans" class="container my-1">
        <div class="row">
            <div class="col-md-4 mt-3">
                <div class="card text-center d-flex flex-column h-100">
                    <div class="card-header membership-card-header bg-primary text-white" style="font-size: 1.5em;">Basic</div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text flex-grow-1 text-dark">Limited access to features.</p>
                        <p class="card-text flex-grow-1 text-dark">Mon-Fri: 3:00 PM - 10:00 PM.</p>
                        <p class="card-text flex-grow-1 text-dark">Sat-Sun: 8:00 AM - 3:00 PM.</p>
                        <h5 class="card-title text-danger">$10/month</h5>
                        <a href="#plans" class="btn btn-primary mt-auto" style="margin: 0 auto; display: block;">Choose</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="card text-center d-flex flex-column h-100">
                    <div class="card-header membership-card-header bg-primary text-white" style="font-size: 1.5em;">Standard</div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text flex-grow-1 text-dark">Access to all equipment.</p>
                        <p class="card-text flex-grow-1 text-dark">Mon-Fri: 3:00 PM - 10:00 PM.</p>
                        <p class="card-text flex-grow-1 text-dark">Sat-Sun: 8:00 AM - 3:00 PM.</p>
                        <h5 class="card-title text-danger">$40/month</h5>
                        <a href="#plans" class="btn btn-primary mt-auto" style="margin: 0 auto; display: block;">Choose</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="card text-center d-flex flex-column h-100">
                    <div class="card-header membership-card-header bg-primary text-white" style="font-size: 1.5em;">Premium</div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text flex-grow-1 text-dark">VIP access.</p>
                        <p class="card-text flex-grow-1 text-dark">Mon-Fri: 3:00 PM - 10:00 PM.</p>
                        <p class="card-text flex-grow-1 text-dark">Sat-Sun: 8:00 AM - 3:00 PM.</p>
                        <h5 class="card-title text-danger">$60/month</h5>
                        <a href="#plans" class="btn btn-primary mt-auto" style="margin: 0 auto; display: block;">Choose</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="card text-center d-flex flex-column h-100">
                    <div class="card-header membership-card-header bg-primary text-white" style="font-size: 1.5em;">Elite</div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text flex-grow-1 text-dark">Personal trainer and priority access.</p>
                        <p class="card-text flex-grow-1 text-dark">Mon-Fri: 3:00 PM - 10:00 PM.</p>
                        <p class="card-text flex-grow-1 text-dark">Sat-Sun: 8:00 AM - 3:00 PM.</p>
                        <h5 class="card-title text-danger">$100/month</h5>
                        <a href="#plans" class="btn btn-primary mt-auto" style="margin: 0 auto; display: block;">Choose</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="card text-center d-flex flex-column h-100">
                    <div class="card-header membership-card-header bg-primary text-white" style="font-size: 1.5em;">Friends</div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text flex-grow-1 text-dark">Access for 3 members.</p>
                        <p class="card-text flex-grow-1 text-dark">Mon-Fri: 3:00 PM - 10:00 PM.</p>
                        <p class="card-text flex-grow-1 text-dark">Sat-Sun: 8:00 AM - 3:00 PM.</p>
                        <h5 class="card-title text-danger">$120/month</h5>
                        <a href="#plans" class="btn btn-primary mt-auto" style="margin: 0 auto; display: block;">Choose</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="card text-center d-flex flex-column h-100">
                    <div class="card-header membership-card-header bg-primary text-white" style="font-size: 1.5em;">Corporate</div>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text flex-grow-1 text-dark">Access for employees.</p>
                        <p class="card-text flex-grow-1 text-dark">Mon-Fri: 3:00 PM - 10:00 PM.</p>
                        <p class="card-text flex-grow-1 text-dark">Sat-Sun: 8:00 AM - 3:00 PM.</p>
                        <h5 class="card-title text-danger">Negotiable price</h5>
                        <a href="#plans" class="btn btn-primary mt-auto" style="margin: 0 auto; display: block;">Choose</a>
                    </div>
                </div>
            </div>
