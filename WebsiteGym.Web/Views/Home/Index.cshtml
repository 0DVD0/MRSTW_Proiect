<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Gym Management - Home</title>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
     <link rel="stylesheet" href="~/Content/home_style.css">
</head>
<body>
     <!--Navigation Bar-->
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
               <!-- Logo -->
               <a class="navbar-brand" href="@Url.Action("index", "Home")">
                    <img src="@Url.Content("~/Content/img/Logo.png")" alt="Gym Logo" class="brand-logo">
                    <span class="brand-text">MADGYM</span>
               </a>

               <!-- Sidebar Toggle Button (Only for Mobile) -->
               <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                    &#9776;

               </button>

               <!-- Standard Navbar Links (Hidden on Mobile) -->
               <div class="collapse navbar-collapse d-none d-lg-flex" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                         <li class="nav-item"><a class="nav-link" href="@Url.Action("about", "Home")">About</a></li>
                         <li class="nav-item"><a class="nav-link" href="@Url.Action("services", "Home")">Services</a></li>
                         <li class="nav-item"><a class="nav-link" href="@Url.Action("memberships", "Home")">Membership</a></li>
                         <li class="nav-item"><a class="nav-link" href="@Url.Action("contact", "Home")">Contact</a></li>
                         <li class="nav-item"><a class="btn btn-primary" href="@Url.Action("login", "Home")">Login</a></li>
                    </ul>
               </div>
          </div>
     </nav>

     <!-- Offcanvas Sidebar (For Mobile Navigation) -->
     <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasSidebar" aria-labelledby="offcanvasSidebarLabel">
          <div class="offcanvas-header">
               <h5 class="offcanvas-title" id="offcanvasSidebarLabel">Menu</h5>
               <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
               <ul class="list-unstyled">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("about", "Home")">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("services", "Home")">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("memberships", "Home")">Membership</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("contact", "Home")">Contact</a></li>
                    <li class="nav-item"><a class="btn btn-primary" href="@Url.Action("login", "Home")">Login</a></li>
               </ul>
          </div>
     </div>

     <!-- Hero Section -->
     <section id="hero">
          <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
               <div class="carousel-inner">
                    <div class="carousel-item active">
                         <img src="@Url.Content("~/Content/img/shtanga-trenazhernyy-zal-gym.jpg")" class="d-block w-100" alt="Slide 1">
                    </div>
                    <div class="carousel-item">
                         <img src="@Url.Content("~/Content/img/pexels-anush-1229356.jpg")" class="d-block w-100" alt="Slide 2">
                    </div>
                    <div class="carousel-item">
                         <img src="@Url.Content("~/Content/img/360_F_338166432_0o8qtAQIE5VMynSeJql9rekVtDaUiPKZ.jpg")" class="d-block w-100" alt="Slide 3">
                    </div>
               </div>
          </div>

          <!-- Fixed Overlay Text -->
          <div class="hero-overlay">
               <h1>Push Your Limits</h1>
               <p>Experience the best training programs tailored to your needs.</p>
               <a href="#services" class="btn btn-primary btn-lg">Join Now &#8595;</a>
          </div>
     </section>

     <!-- Services Section -->
     <section id="services" class="py-5 text-center">
          <div class="container">
               <h2 class="mb-4">Our Services</h2>
               <div class="row">
                    <div class="col-md-4">
                         <div class="card service-card">
                              <img src="@Url.Content("~/Content/img/Best-Personal-Trainers-in-Edgewater-MD.png")" class="card-img-top" alt="Personal Training">
                              <div class="card-body">
                                   <h3>Personal Training</h3>
                                   <p>One-on-one coaching with expert trainers.</p>
                              </div>
                         </div>
                    </div>
                    <div class="col-md-4">
                         <div class="card service-card">
                              <img src="@Url.Content("~/Content/img/group-workouts-1-1-1024x536.jpg")" class="card-img-top" alt="Group Classes">
                              <div class="card-body">
                                   <h3>Group Classes</h3>
                                   <p>Exciting HIIT, yoga, and strength classes.</p>
                              </div>
                         </div>
                    </div>
                    <div class="col-md-4">
                         <div class="card service-card">
                              <img src="@Url.Content("~/Content/img/f710044bf79a4b1f5d8b085e5e5d9711_M.jpg")" class="card-img-top" alt="Nutrition Coaching">
                              <div class="card-body">
                                   <h3>Nutrition Coaching</h3>
                                   <p>Personalized meal plans for better results.</p>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </section>
     <div class="text-center button-container">
          <button class="btn btn-primary btn-lg" href="@Url.Action("services", "Home")">See Services</button>
     </div>

     <!-- Membership Plans -->
     <section id="membership" class="py-5 text-center">
          <div class="container">
               <h2 class="mb-4">Membership Plans</h2>
               <div class="row">
                    <div class="col-md-4">
                         <div class="card">
                              <div class="card-body">
                                   <h3>Basic</h3>
                                   <p>$20/month</p>
                                   <a href="@Url.Action("memberships", "Home")" class="btn btn-primary">Learn More</a>
                              </div>
                         </div>
                         </div>
                    <div class="col-md-4">
                         <div class="card">
                              <div class="card-body">
                                   <h3>Premium</h3>
                                   <p>$50/month (Includes personal training + nutrition)</p>
                                   <a href="@Url.Action("memberships", "Home")" class="btn btn-primary">Learn More</a>
                              </div>
                         </div>
                    </div>
                    <div class="col-md-4">
                         <div class="card">
                              <div class="card-body">
                                   <h3>Ultimate</h3>
                                   <p>$100/month (Includes all VIP privilages)</p>
                                   <a href="@Url.Action("memberships", "Home")" class="btn btn-primary">Learn More</a>
                              </div>
                         </div>
                    </div>
               </div>
          </div>
     </section>

     <!-- Testimonials -->
     <section id="testimonials" class="py-5 bg-light text-center">
          <div class="container">
               <h2>What Our Members Say</h2>
               <blockquote class="blockquote">
                    <p>"This gym transformed my life! The trainers are amazing and the atmosphere is inspiring."</p>
                    <footer class="blockquote-footer">John D.</footer>
               </blockquote>
          </div>
     </section>

     <!-- About Us Section -->
     <section id="about" class="py-5 bg-light text-center">
          <div class="container">
               <h2>About MadGym</h2>
               <p>We provide world-class fitness facilities with expert trainers to help you reach your fitness goals.</p>
               <a href="about.html" class="btn btn-primary">Learn More</a>
          </div>
     </section>

     <!-- Footer -->
     <footer class="bg-dark text-white text-center py-3">
          <p>&copy; 2025 MadGym. All Rights Reserved.</p>
     </footer>

     <!-- Bootstrap JS -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
     <script src="~/Scripts/home_script.js"></script>
</body>
</html>
